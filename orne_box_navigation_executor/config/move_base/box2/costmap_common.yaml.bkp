# move_base common parameters
local_obstacles_layer:
  enabled: true
  obstacle_range: 3
  raytrace_range: 4
  inflation_radius: 1.2
  combination_method: 1
  #  observation_sources: 2d_lidar_laser_scan 3d_lidar_laser_scan
  observation_sources: 2d_lidar_laser_scan
  2d_lidar_laser_scan:
    data_type: LaserScan
    sensor_frame: hokuyo_link
    marking: true
    clearing: true
    inf_is_valid: true
    min_obstacle_height: 0.1
    max_obstacle_height: 30.0
    topic: /hokuyo_scan
    #  3d_lidar_laser_scan:
    #    data_type: LaserScan
    #    sensor_frame: surestar
    #    marking: true
    #    clearing: true
    #    inf_is_valid: true
    #    min_obstacle_height: 0.1
    #    max_obstacle_height: 30.0
    #    topic: velodyne_driver/scan
local_cost_cloud_layer:
  enabled: true
  obstacle_range: 5
  raytrace_range: 6
  inflation_radius: 1.2
  combination_method: 1
  observation_sources: cost_cloud
  cost_cloud:
    data_type: PointCloud2
    sensor_frame: surestar
    marking: true
    clearing: true
    inf_is_valid: true
    min_obstacle_height: -.inf
    max_obstacle_height: .inf
    topic: /cost_cloud_process/cost_cloud
global_obstacles_layer:
  enabled: true
  obstacle_range: 10.0
  raytrace_range: 10.0
  inflation_radius: 0.5
  combination_method: 1
  observation_sources: hokuyo_laser_scan
  hokuyo_laser_scan:
    data_type: LaserScan
    sensor_frame: hokuyo_link
    marking: true #false
    clearing: true #false
    inf_is_valid: true
    min_obstacle_height: &global_min_obstacle_height 0.1
    max_obstacle_height: &global_max_obstacle_height 30.0
    topic: hokuyo_scan
global_obstacles_inflation_layer:
  enabled: true
  use_maximum: true
  inflate_unknown: true
  inflation_radius: 1.2
  cost_scaling_factor: 3.0
planner_map_layer:
  enabled: true
  first_map_only: false
  use_maximum: true
  subscribe_to_updates: false
  trinary_costmap: true
  map_topic: /map_for_costmap
inflation_layer:
  enabled: true
  use_maximum: true
  inflate_unknown: true
  inflation_radius: 1.5
  cost_scaling_factor: 3.0
